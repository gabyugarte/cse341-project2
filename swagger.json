{
  "swagger": "2.0",
  "info": {
    "title": "Movies API",
    "description": "API documentation for Movies Project",
    "version": "1.0.0"
  },
  "host": "cse341-project2-o5vk.onrender.com",
  "basePath": "/",
  "schemes": ["https"],
  "paths": {
    "/movies": {
      "get": {
        "summary": "Get all movies",
        "responses": {
          "200": { "description": "Success" }
        }
      },
      "post": {
        "summary": "Create movie",
        "parameters": [
          {
            "in": "body",
            "name": "movie",
            "required": true,
            "schema": {
              "$ref": "#/definitions/Movie"
            }
          }
        ],
        "responses": {
          "201": { "description": "Movie created" }
        }
      }
    },
    "/movies/{id}": {
      "get": {
        "summary": "Get movie by ID",
        "parameters": [
          { "name": "id", "in": "path", "required": true, "type": "string" }
        ],
        "responses": {
          "200": { "description": "Success" },
          "404": { "description": "Not found" }
        }
      },
      "put": {
        "summary": "Update movie",
        "parameters": [
          { "name": "id", "in": "path", "required": true, "type": "string" },
          {
            "in": "body",
            "name": "movie",
            "required": true,
            "schema": {
              "$ref": "#/definitions/Movie"
            }
          }
        ],
        "responses": {
          "200": { "description": "Updated" }
        }
      },
      "delete": {
        "summary": "Delete movie",
        "parameters": [
          { "name": "id", "in": "path", "required": true, "type": "string" }
        ],
        "responses": {
          "200": { "description": "Deleted" }
        }
      }
    },
    "/directors": {
  "get": {
    "summary": "Get all directors",
    "responses": {
      "200": { "description": "Success" }
    }
  },
  "post": {
    "summary": "Create director",
    "parameters": [
      {
        "in": "body",
        "name": "director",
        "required": true,
        "schema": {
          "$ref": "#/definitions/Director"
        }
      }
    ],
    "responses": {
      "201": { "description": "Director created" }
    }
  }
},
"/directors/{id}": {
  "get": {
    "summary": "Get director by ID",
    "parameters": [
      { "name": "id", "in": "path", "required": true, "type": "string" }
    ],
    "responses": {
      "200": { "description": "Success" },
      "404": { "description": "Not found" }
    }
  },
  "put": {
    "summary": "Update director",
    "parameters": [
      { "name": "id", "in": "path", "required": true, "type": "string" },
      {
        "in": "body",
        "name": "director",
        "schema": {
          "$ref": "#/definitions/Director"
        }
      }
    ],
    "responses": {
      "200": { "description": "Updated" }
    }
  },
  "delete": {
    "summary": "Delete director",
    "parameters": [
      { "name": "id", "in": "path", "required": true, "type": "string" }
    ],
    "responses": {
      "200": { "description": "Deleted" }
    }
  }
}

  },
  "definitions": {
    "Movie": {
      "type": "object",
      "properties": {
        "title": { "type": "string" },
        "directorId": { "type": "string" },
        "genre": { "type": "string" },
        "releaseYear": { "type": "number" },
        "duration": { "type": "number" },
        "language": { "type": "string" },
        "rating": { "type": "number" }
      }
    }
  }
}
