{
  "swagger": "2.0",
  "info": {
    "title": "Movies API",
    "description": "API documentation for Movies Project",
    "version": "1.0.0"
  },
  "host": "cse341-project2.onrender.com",
  "basePath": "/movies",
  "schemes": ["https"],
  "paths": {
    "/": {
      "get": {
        "description": "Get all movies",
        "responses": {
          "200": { "description": "OK" },
          "500": { "description": "Internal Server Error" }
        }
      },
      "post": {
        "description": "Create a new movie",
        "parameters": [
          {
            "name": "movie",
            "in": "body",
            "required": true,
            "schema": { "$ref": "#/definitions/Movie" }
          }
        ],
        "responses": {
          "201": { "description": "Created" },
          "412": { "description": "Validation Failed" },
          "500": { "description": "Internal Server Error" }
        }
      }
    },
    "/{id}": {
      "get": {
        "description": "Get movie by ID",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "200": { "description": "OK" },
          "400": { "description": "Invalid ID format" },
          "404": { "description": "Movie not found" },
          "500": { "description": "Internal Server Error" }
        }
      },
      "put": {
        "description": "Update movie by ID",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "string"
          },
          {
            "name": "movie",
            "in": "body",
            "required": true,
            "schema": { "$ref": "#/definitions/Movie" }
          }
        ],
        "responses": {
          "200": { "description": "Updated" },
          "400": { "description": "Invalid ID format" },
          "404": { "description": "Movie not found" },
          "412": { "description": "Validation Failed" },
          "500": { "description": "Internal Server Error" }
        }
      },
      "delete": {
        "description": "Delete movie by ID",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "200": { "description": "Deleted" },
          "400": { "description": "Invalid ID format" },
          "404": { "description": "Movie not found" },
          "500": { "description": "Internal Server Error" }
        }
      }
    }
  },
  "definitions": {
    "Movie": {
      "type": "object",
      "properties": {
        "title": { "type": "string" },
        "genre": { "type": "string" },
        "director": { "type": "string" },
        "releaseYear": { "type": "integer" }
      },
      "required": ["title", "genre", "director", "releaseYear"]
    }
  }
}
